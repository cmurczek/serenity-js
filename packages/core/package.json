{
  "name": "@serenity-js/core",
  "version": "2.16.0",
  "description": "Serenity/JS Screenplay, reporting engine and core interfaces.",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "funding": {
    "url": "https://github.com/sponsors/serenity-js"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "bdd",
    "tdd",
    "test",
    "testing",
    "serenity",
    "screenplay"
  ],
  "scripts": {
    "clean": "rimraf .nyc_output lib target",
    "lint": "tslint --project tsconfig-lint.json --config ../../tslint.json --format stylish",
    "test:lib": "nyc --report-dir ../../target/coverage/core mocha --config ../../.mocharc.yml 'spec/**/*.spec.*'",
    "test:schematics": "nyc --report-dir ../../target/coverage/core env TS_NODE_PROJECT='./tsconfig.schematics.json' mocha --config ../../.mocharc.yml './schematics/**/*.spec.ts'",
    "test": "npm run test:lib && npm run test:schematics",
    "compile": "tsc --project tsconfig.json && node ./schematics/tools/build-schemas.js && tsc --project tsconfig.schematics.json",
    "site": "esdoc -c .esdoc.js",
    "copy:schemas": "cp --parents schematics/*/schema.json ./lib/",
    "copy:files": "cp -r --parents schematics/*/files/** ./lib/",
    "copy:collection": "cp schematics/collection.json ./lib/schematics/collection.json",
    "postbuild": "npm run copy:schemas && npm run copy:files && npm run copy:collection"
  },
  "dependencies": {
    "cuid": "^2.1.8",
    "diff": "^4.0.2",
    "error-stack-parser": "^2.0.6",
    "filenamify": "^4.1.0",
    "graceful-fs": "^4.2.4",
    "moment": "^2.26.0",
    "semver": "^7.3.2",
    "tiny-types": "^1.15.0",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "@documentation/esdoc-template": "2.0.7",
    "@types/cuid": "^1.3.1",
    "@types/diff": "^4.0.2",
    "@types/filenamify": "^2.0.2",
    "@types/mocha": "^8.0.0",
    "@types/semver": "^7.2.0",
    "memfs": "^3.2.0"
  },
  "optionalDependencies": {
    "@angular/cli": ">=8.0.0",
    "@angular-devkit/schematics-cli": ">=0.800.0",
    "@angular-devkit/schematics": ">=0.800.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": ">= 10",
    "npm": ">= 6"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts",
      "lib",
      "spec",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json"
    ],
    "cache": true,
    "all": true
  },
  "schematics": "./schematics/collection.json"
}
